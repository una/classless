---
title: Toggle
---

<div class="row">
  <div class="small-12 columns">
    <h1>Toggles</h1>
  </div>
</div>

<div class="row u-mb-5">
  <div class="small-12 columns">
    <h3>Default Toggle</h3>
    <div class="u-mt-4 Toggle">
      <div class="Toggle-switcher"></div>
    </div>
  </div>
</div>

<div class="row u-mb-7">
  <div class="small-12 columns">
    <pre>
      <code><%= display_code('
<div class="u-mt-4 Toggle">
  <div class="Toggle-switcher"></div>
</div>') %></code>
    </pre>
  </div>
</div>

<div class="row u-mb-5">
  <div class="small-12 columns">
    <h3>Toggle (On position)</h3>
    <div class="u-mt-4 Toggle is-on">
      <div class="Toggle-switcher"></div>
    </div>
  </div>
</div>

<div class="row u-mb-7">
  <div class="small-12 columns">
    <pre>
      <code><%= display_code('
<div class="u-mt-4 Toggle is-on">
  <div class="Toggle-switcher"></div>
</div>') %></code>
    </pre>
  </div>
</div>
