<div class="row u-mb-5">
  <div class="small-12 columns">
    <h2>Default Table</h2>
  </div>
</div>

<div class="row u-mb-5">
   <div class="small-12 columns">
      <div class="example">
        <table>
          <thead>
            <tr>
              <th>Fruit Type</th>
              <th>Shelf Life</th>
              <th>Color</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Pear</td>
              <td>2 Weeks</td>
              <td>Green</td>
            </tr>

            <tr>
              <td>Apple</td>
              <td>4 weeks</td>
              <td>Red / Green / Yellow</td>
            </tr>

            <tr>
              <td>Plum</td>
              <td>3 days</td>
              <td>Purple</td>
            </tr>
          </tbody>
        </table>
      </div>
