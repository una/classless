{{#each items as |item|}}
  {{#if item.long}}
    {{float-label-textarea
      value=item.value
      pattern=item.pattern
      placeholder=item.label
      error=item.err
      className=(concat 'text-' (slugify item.label) ' key-' item.key)
      required=true
    }}
  {{else if item.autoComplete}}
    {{#if (or record.droplet record.floatingIp)}}
      {{auto-complete
        items=autoCompleteItems
        isSearching=autoCompleteIsSearching
        isShowingMore=autoCompleteIsShowingMore
        disabledItemIndicies=autoCompleteDisabledItemIndicies
        name=autoCompleteName
        initialSelectedItem=(or record.droplet.content record.floatingIp.content)
        showIpMeta=true
        showIpv6=(eq record.recordType 'AAAA')
        onSelect="onSelectItem"
        placeholder=item.placeholder
        pattern=item.pattern
        error=item.err
        isRequired=true
      }}
    {{else}}
      {{auto-complete
        items=autoCompleteItems
        isSearching=autoCompleteIsSearching
        isShowingMore=autoCompleteIsShowingMore
        disabledItemIndicies=autoCompleteDisabledItemIndicies
        name=autoCompleteName
        searchValue=item.value
        hideListUntilFirstSearch=true
        showIpMeta=true
        showIpv6=(eq record.recordType 'AAAA')
        onSelect="onSelectItem"
        placeholder=item.placeholder
        pattern=item.pattern
        error=item.err
        isRequired=true
      }}
    {{/if}}
  {{else}}
    {{float-label-input
      value=item.value
      pattern=item.pattern
      placeholder=item.label
      error=item.err
      className=(concat 'text-' (slugify item.label) ' key-' item.key)
      required=true
    }}
  {{/if}}
{{/each}}
