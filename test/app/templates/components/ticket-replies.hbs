{{#if collapsedReplies.length}}
  <ul class="replies collapsable {{if model.isCollapsed 'is-collapsed' ''}} {{if expandedReplies.length 'hasExpanded' ''}}" data-len="{{collapsedReplies.length}}">
  {{#each collapsedReplies as |reply|}}
      {{ticket-reply sendFeedback="sendFeedback" reply=reply}}
  {{/each}}
  </ul>
{{/if}}

{{#if expandedReplies.length}}
  <ul class="replies">
  {{#each expandedReplies as |reply|}}
      {{ticket-reply sendFeedback="sendFeedback" reply=reply}}
  {{/each}}
  </ul>
{{/if}}
