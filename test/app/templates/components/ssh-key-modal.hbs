{{#modal-window showCancel=false showSave=false onHide=onHide title=title contentClasses="u-pl-2 u-pr-2 form-modal ssh-key-modal"}}
  {{#community-link class="how-to" slug="how-to-use-ssh-keys-with-digitalocean-droplets"}}How to use SSH keys{{/community-link}}
  {{#form-with-validation onSubmit="onSubmit" disabled=disabled submitButtonText=submitButtonText}}
    {{float-label-textarea
      class="is-sensitive"
      required=true
      placeholder="SSH key content"
      pattern="^[^\s]+\s[^\s]+.*$"
      error="SSH key content must be a valid SSH key"
      value=keyValue
    }}
    {{float-label-input
      required=true
      placeholder="Name"
      value=keyName
    }}
    {{#if savingKey}}
      {{loading-spinner spinnerClass="ssh-save-spinner"}}
    {{/if}}
  {{/form-with-validation}}
{{/modal-window}}
